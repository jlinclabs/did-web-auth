<div class="text-center my-6">
  <h1 class="text-3xl font-semibold">DID Auth Proof of Concept</h1>
</div>
{{#if user}}
  <div class="text-center my-6">
    <h2 class="text-xl font-semibold">You are logged in as {{user.username}}</h2>
    <p class="my-2">
      You can login to any other site using
      <span class="font-semibold">{{usernameToEmail user.username}}</span>
    </p>
    <div class="my-2">
    {{> signoutForm }}
    </div>
  </div>
{{else}}

  <div style="display: flex; justify-content: space-around;">
    <div>
      <h3 class="text-xl font-semibold">Sign up</h3>
      <p class="w-full max-w-xs my-2">
        If you do not have account yet:
      </p>
      {{> signupForm }}
    </div>
    <div>
      <h3 class="text-xl font-semibold">Sign in</h3>
      <p class="w-full max-w-xs my-2">
        If you already have an account here
      </p>
      {{> signinForm }}
    </div>
  </div>
{{/if}}