<div style="background-color: {{appColor}};">
  <div class="p-2 grid gap-2 grid-cols-3 items-center mx-auto max-w-5xl">
    <a class="text-blue-500 hover:text-blue-800" href="/">
      {{host}}
    </a>
    <a class="justify-self-center text-xl text-blue-500 hover:text-blue-800" href="/">
      DID Auth POC
    </a>
    <div class="justify-self-end">
      {{#if user}}
        <div class="flex gap-2">
          <div>
            {{#if user.avatar_url}}
            <img
              src="{{user.avatar_url}}"
              class="w-10 rounded-full"
            />
            {{/if}}
          </div>
          <div>
            <div class="text-gray-700 text-sm">{{user.name}}</div>
            <div class="text-gray-700 text-sm font-bold">{{usernameToEmail user.username}}</div>
          </div>
          {{> signoutForm }}
        </div>
      {{else}}

      {{/if}}
    </div>
  </div>
</div>